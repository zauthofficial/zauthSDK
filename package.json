{
  "name": "@zauthx402/sdk",
  "version": "0.1.7",
  "description": "Monitoring, verification, and refund SDK for x402 payment endpoints",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./middleware": {
      "types": "./dist/middleware/index.d.ts",
      "import": "./dist/middleware/index.mjs",
      "require": "./dist/middleware/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "x402",
    "payment",
    "monitoring",
    "verification",
    "crypto",
    "api",
    "middleware"
  ],
  "author": "zauthx402",
  "license": "MIT",
  "homepage": "https://zauthx402.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/zauthofficial/zauthSDK"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "express": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    }
  },
  "dependencies": {
    "@solana/kit": "^5.1.0",
    "@solana/signers": "^5.1.0",
    "@solana-program/token": "^0.9.0",
    "bs58": "^6.0.0"
  },
  "optionalDependencies": {
    "viem": "^2.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "express": "^4.18.2",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
